# Server Configuration
PORT=3000

# Environment
NODE_ENV=development  # 'development' for fake mailer, 'production' for real SMTP

# Security
API_KEY=your-api-key-here  # Replace with a secure API key in production
CSRF_SECRET=your-csrf-secret-here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com,https://your-production-site.com,https://www.your-production-site.com

# SMTP Configuration (used in production)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_FROM=your-email@example.com

# Development Mail Settings
USE_FAKE_MAILER=true  # Set to false to use real SMTP even in development
